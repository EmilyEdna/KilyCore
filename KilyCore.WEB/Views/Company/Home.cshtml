    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //安全退出
                options.SignOut();
                //用户信息
                if ($("body").GetCompanyInfo())
                    $(".LoginOut").click();
                else
                    //获取树
                    options.GetMenu();
                //显示登录
                $(".text-muted").prepend(CompanyUser.CompanyName);
                $(".font-bold").prepend(CompanyUser.CompanyAccount);

            },
            //获取树
            GetMenu: function () {
                controller.ajax({
                    url: "EnterpriseWeb/GetEnterpriseMenu",
                    data: {},
                    type: "post",
                    async: false,
                    xhrFields: {
                        withCredentials: true
                    },
                    crossDomain: true,
                    success: function (result) {
                        $('#side-menu').SetTree(result.data);
                    }
                });
            },
            //安全退出
            SignOut: function () {
                $(".LoginOut").on('click', function () {
                    controller.ClearLocal();
                    controller.ajax({
                        url: "Enterprise/LoginOut",
                        data: {},
                        type: "post",
                        async: false,
                        success: function (result) {
                            controller.Confirm("您已经成功安全退出系统！", function (index) {
                                controller.SetHref("Login");
                            })
                        }
                    });
                    controller.DeleteCookie();
                });
            },
            //事件
            InitEvents: function () {
                 //获取消息
                controller.ajax({
                    url: "System/GetMsgPage",
                    data: { pageNumber: 1, pageSize: 15 },
                    type: "post",
                    async: false,
                    success: function (result) {
                        var html = '';
                        $.each(result.data.rows, function (i, obj) {
                            html += '<li><a href="javascript:void(0);"><div class="row"><section>';
                            html += ' <dl> <i class="fa fa-comment fa-fw"></i>' + obj.MsgName + '</dl>';
                            html += '<article class="text text-warning">' + obj.MsgContent + '</article>';
                            html += ' <span class="pull-right small">发布时间：' + obj.ReleaseTime + '</span>';
                            html += '</section></div></a></li><li class="divider"></li>';
                        });
                        $(".dropdown-alerts").html(html);
                        $(".label-primary").html(result.data.total);
                    }
                });
            },
            //行为
            action: {}
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
