@section script{
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=3ce7ddfda60046708248ea55e10b1435"></script>
    <script type="text/javascript" src="http://api.map.baidu.com/library/AreaRestriction/1.2/src/AreaRestriction_min.js"></script>
    <script src="~/Content/Tabs/contabsiframe.js"></script>
    <script>
        var option = {
            Init: function () {
                this.InitDom();
                this.InitEvent();
            },
            InitDom: function () {
                //视频图片点击事件
                $(".item2 .content2 img").on("click", function () {
                    controller.OpenWindow({
                        title: "视频播放",
                        type: 2,
                        btn: [],
                        maxmin: false,
                        height: "480px",
                        width: "520px",
                        url: "StaticHtml/PlayVedio.html?addr=" + $(this).data().value + "&cover=" + $(this).attr("src"),
                        callBack: function (result) {
                            result.popClose();
                        }
                    });
                });
                //获取视频
                controller.ajax({
                    url: "RepastWeb/GetVideoPage",
                    data: { pageSize: 4, pageNumber: 1, QueryParam: { IsIndex: true } },
                    async: false,
                    type: "post",
                    success: function (result) {
                        if (result.data.rows.length == 0) {
                            $(".item2 .content2").html("暂无视频");
                        } else {
                            $.each(result.data.rows, function (index, item) {
                                if (!controller.CheckFeild(item.VedioCover))
                                    item.VedioCover = "http://system.cfda.vip/Content/HPlus/img/Nopic.jpg";
                                var img = $($(".item2 .content2 img")[index]);
                                img.attr("title", item.VedioName);
                                img.attr("src", item.VedioCover);
                                img.data().value = item.VideoAddress;
                            });
                        }
                    }
                });
            },
            InitEvent: function () {
                //数据统计
                controller.ajax({
                    url: "RepastWeb/GetDataCount",
                    data: { Id: RepastUser.Id },
                    type: "post",
                    async: false,
                    success: function (result) {
                        controller.SetLableValue(".section1", result.data);
                    }
                });
            }
        };
        $(document).ready(function () {
            option.Init();
        });

    </script>
}
