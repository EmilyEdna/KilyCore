        });
        //展示
        function ShowModelDetail(Url,Title) {
             controller.OpenWindow({
                    title:Title,
                    type: 2,
                    height: "80%",
                    width: "60%",  
                 url: Url,
                    btn:["关闭"],
                    callBack: function (result) {
                        controller.Close();
                    }
                });
        }
    </script>
