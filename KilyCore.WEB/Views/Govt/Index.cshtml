                   ShowModelDetail("WebGovtManage/Risk/CertificateRiskDetail?Name=" + CompanyName+"&PersonName="+PersonName+"&CardType="+CardType+"&CardExpiredDate="+ExpiredDate+"&CardImg="+CardImg+"&Remark="+Remark);
                }
