
@{
    ViewData["Title"] = "产品统计";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script src="~/Content/ExportPlugin/Script/xlsx.core.min.js"></script>
    <script src="~/Content/ExportPlugin/Script/tableExport.js"></script>
    <script>
        //配置
        var options = {
            Init: function () {
                this.Inithom();
                this.InitEvents();
            },
            //元素
            Inithom: function () {
                controller.ajax({
                    url: "System/GetProductCountCenter",
                    data: {},
                    type: "post",
                    async: false,
                    success: function (result) {
                        var html = '';
                        $.each(result.data, function (i, data) {
                            html += '<tr><td align="center" valign="middle">' + data.AreaName + '</td>';
                            html += '<td align="center" valign="middle">' + data.HistoryFarmer + '</td>';
                            html += '<td align="center" valign="middle">' + data.NowFarmer + '</td>';
                            html += '<td align="center" valign="middle">' + data.FarmerSum + '</td>';
                            html += '<td align="center" valign="middle">' + data.HistoryFood + '</td>';
                            html += '<td align="center" valign="middle">' + data.NowFood + '</td>';
                            html += '<td align="center" valign="middle">' + data.FoodSum + '</td>';
                            html += '<td align="center" valign="middle">' + data.HistoryDrug + '</td>';
                            html += '<td align="center" valign="middle">' + data.NowDrug + '</td>';
                            html += '<td align="center" valign="middle">' + data.DrugSum + '</td>';
                            html += '<td align="center" valign="middle">' + data.HistoryCosplay + '</td>';
                            html += '<td align="center" valign="middle">' + data.NowCosplay + '</td>';
                            html += '<td align="center" valign="middle">' + data.CosplaySum + '</td>';
                            html += '<td align="center" valign="middle">' + data.HistoryMachine + '</td>';
                            html += '<td align="center" valign="middle">' + data.NowMachine + '</td>';
                            html += '<td align="center" valign="middle">' + data.MachineSum + '</td>';
                            html += '<td align="center" valign="middle">' + data.HistoryOhter + '</td>';
                            html += '<td align="center" valign="middle">' + data.NowOhter + '</td>';
                            html += '<td align="center" valign="middle">' + data.OhterSum + '</td>';
                            html += '<td align="center" valign="middle">' + data.MonthSum + '</td>';
                            html += '<td align="center" valign="middle">' + data.Total + '</td></tr>';
                        });
                        $("tbody").html(html);
                    }
                });
            },
            //事件
            InitEvents: function () {
                //导出Excel
                $("#export2003").on('click', function () {
                    $("#tableList").tableExport({
                        fileName: "产品统计",
                        ignoreColumn: ["Handler"],
                        type: "excel",
                        mso: {
                            worksheetName: "产品统计",
                        }
                    });
                });
                //导出Excel
                $("#export2007").on('click', function () {
                    $("#tableList").tableExport({
                        fileName: "产品统计",
                        ignoreColumn: ["Handler"],
                        type: "excel",
                        mso: {
                            fileFormat: "xlsx",
                            worksheetName: "产品统计",
                        }
                    });
                });
            },
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
