
@{
    ViewData["Title"] = "版本升级";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                var pre = controller.GetParam("Flag") == "true" ? "EnterpriseWeb" : "RepastWeb";
                var obj = controller.GetParam("Flag") == "true" ? { CompanyId: controller.GetParam("Id") } : { InfoId: controller.GetParam("Id") }
                //设置表单
                this.$table = controller.Table("#tableList", { url: pre + "/GetUpLevelPage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Edit", param: obj });
            },
            //事件
            InitEvents: function () {
            },
            //行为
            action: {
                ImgFormatter: function (val, row, index) {
                    var action = [];
                    if (row.PaytTicket != null) {
                        for (var i = 0; i < row.PaytTicket.split(',').length; i++) {
                            action.push('<img class="photo" src="' + row.PaytTicket.split(',')[i] + '" style="width:48px;height:32px;"">')
                        }
                    }
                    return action.join("&nbsp;");
                },
                ImgEvents: {
                    "click .photo": function (event, val, row, index) {
                        var option = {
                            title: "缴费凭证",
                            data: [{
                                alt: "缴费凭证",
                                src: $(this).attr("src")
                            }]
                        };
                        controller.Photos(option);
                    }
                },
                TableFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<button class="btn btn-sm btn-primary audit"><i class="fa fa-pencil-square-o"></i>审核</button>');
                    return action.join("&nbsp;")
                },
                TableEvents: {
                    "click .audit": function (event, val, row, index) {
                        controller.Confirm("确认审核？", function (bool) {
                            var pre = controller.GetParam("Flag") == "true" ? "EnterpriseWeb" : "RepastWeb";
                            if (bool) {
                                controller.ajax({
                                    url: pre+"/AuditContinuedAndLevel",
                                    data: { Id: row.Id, Parameter: false },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    },
                }//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{

}
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>续费记录</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="Edit">
                        <div class="col-sm-11 m-b-xs">
                            <div class="input-group">
                            </div>
                        </div>
                        <div class="col-sm-1">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="ContinuedYear" data-halign="center" data-align="center" data-valign="middle">续费年限</th>
                                <th data-field="PayTypeName" data-halign="center" data-align="center" data-valign="middle">支付类型</th>
                                <th data-field="Payment" data-halign="center" data-align="center" data-valign="middle">是否付款</th>
                                <th data-field="AuditTypeName" data-halign="center" data-align="center" data-valign="middle">审核状态</th>
                                <th data-field="VersionTypeName" data-halign="center" data-align="center" data-valign="middle">版本名称</th>
                                <th data-formatter="options.action.ImgFormatter" data-events="options.action.ImgEvents" data-halign="center" data-align="center" data-valign="middle">缴费凭证</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>