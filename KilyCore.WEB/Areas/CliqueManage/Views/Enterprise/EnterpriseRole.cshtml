
@{
    ViewData["Title"] = "集团角色";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                //设置表单
                this.$table = controller.Table("#tableList", { url: "Enterprise/GetCompanyRoleAuthorPage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#RoleAother" });
            },
            //事件
            InitEvents: function () {
            },
            //行为
            action: {
                TableFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<button class="btn btn-sm btn-primary rash"><i class="fa fa-mail-reply"></i>分配菜单</button>');
                    action.push('<button class="btn btn-sm btn-primary edit"><i class="fa fa-mail-forward"></i>编辑分配</button>');
                    return action.join("&nbsp;")
                },
                TableEvents: {
                    "click .rash": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "分配菜单",
                            type: 2,
                            height: "400px",
                            width: "600px",
                            maxmin: false,
                            resize: false,
                            url: "CliqueManage/Enterprise/EnterpriseRoleEdit?CompanyId=" + row.CompanyId,
                            callBack: function (result) {
                                result.$("#Edit").submit();
                            }
                        })
                    },
                    "click .edit": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "编辑菜单",
                            type: 2,
                            height: "400px",
                            width: "600px",
                            url: "CliqueManage/Enterprise/EnterpriseRoleEdit?Id=" + row.Id,
                            callBack: function (result) {
                                result.$("#Edit").submit();
                             }
                        })
                    }
                }//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{

}

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>集团角色</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="RoleAother">
                        <div class="col-sm-8 m-b-xs">
                            <div class="input-group">
                                @*<button type="button" class="btn btn-sm btn-white" id="add"><i class="fa fa-plus"></i>新增</button>*@
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input type="text" placeholder="公司名称" class="input-sm form-control" name="CompanyName"> <span class="input-group-btn">
                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-search"></i>搜索</button>
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="CompanyName" data-halign="center" data-align="center" data-valign="middle">公司名称</th>
                                <th data-field="CompanyTypeName" data-halign="center" data-align="center" data-valign="middle">公司类型</th>
                                <th data-field="AuthorMenuCount" data-halign="center" data-align="center" data-valign="middle">菜单总数</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

