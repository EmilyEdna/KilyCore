@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //取详情
                controller.ajax({
                    url: "GovtWeb/GetRepastDetail",
                    data: { Id: controller.GetParam("Id") },
                    async: false,
                    type: "post",
                    success: function (result) {
                        //controller.SetCtrlValue("#Edit", result.data);
                        controller.SetLableValue("#Edit", result.data);
                        
                        $.each(result.data.Video, function (i,obj) {
                             var url = "/StaticHtml/PlayVedio.html?addr=" + obj.VideoAddress+"&cover="+obj.CoverPhoto;
                           $(".J_iframe").eq(i).attr("src", url);

                        })                       
                        options.BindHonor(result.data.HonorCertification);
                        options.BindHealth(result.data.Id);
                        options.BindWeek(result.data.Id);
                        options.BindThing(result.data.Id);
                        options.InitBad(result.data.Id);
                        options.InitTemp(result.data.Id);
                        options.InitCheck(result.data.Id);
                        options.InitSelfCheck(result.data.Id);
                    }
                });
                //查看大图
                $("#tab-2,#tab-3").find("img").on('click', function () {
                    var option = {
                        title: "相关证书",
                        data: [{
                            alt: "相关证书",
                            src: $(this).attr("src")
                        }]
                    };
                    controller.Photos(option);
                });
            },
            //绑定荣誉证书
            BindHonor: function (data) {
                if (data != null) {
                    var html = '';
                    $.each(data, function (i, obj) {
                        html += '<img src="' + obj + '" class="img-preview-sm" title="点击放大"/>';
                    });
                    $("#tab-3").find(".ibox-content").html(html);
                    if (data.length > 4)
                        $("#tab-3").find(".ibox-content").find("img").css({ width: "184px", padding: "1px" });
                    else
                        $("#tab-3").find(".ibox-content").find("img").css({ width: "186px", padding: "1px" });
                }
            },
            //健康证
            BindHealth: function (data) {
                controller.ajax({
                    url: "Temp/GetAllUser",
                    data: { Id: data},
                    async: false,
                    success: function (res) {
                        var PersonHTML = "";
                        $.each(res.data, function (i, item) {
                            var Color = "";
                            if (DateCompare(item.TimeLength)) {
                                var Color = "color:red;";
                            }

                            PersonHTML += '<tr>'
                                + '<td>' + item.PersonName + '</td>'
                                + '<td>' + item.JobStatus + '</td>'
                                + '<td style="'+Color+'">' + item.TimeLength + '</td>'
                                + '<td><img src="' + item.HealthImg + '" style="height:32px;" alt="" title="点击查看"/></td>'
                               
                                + '</tr>';
                        });
                        debugger;
                        $("#PersonList").append(PersonHTML);
                    }
                });
            },
            //食材供应
            BindThing: function (data) {
                //取详情
                controller.ajax({
                    url: "Temp/RepastThing",
                    data: { Id: data },
                    async: false,
                    type: "get",
                    success: function (result) {
                         var ThingHTML = "";
                        $.each(result.data, function (i, item) {
                            ThingHTML += '<tr>'
                                + '<td>' + item.ThingName + '</td>'
                                + '<td>' + item.BuyTime + '</td>'
                                + '<td>' + item.Remark.replace(new RegExp("<img ", 'g'), "<img class='photo' style='max-height:36px;width:auto'").replace(new RegExp("<p", 'g'),"<p style='display:inline-block;' ") + '</td>'
                                + '</tr>';
                        });
                        $("#ThingList").append(ThingHTML);
                    }
                });
            },
             //周菜谱
            BindWeek: function (data) {
                //取详情
                controller.ajax({
                    url: "Temp/RepastWeek",
                    data: { Id: data },
                    async: false,
                    type: "get",
                    success: function (result) {
                        var WeekHTML = "";
                        $.each(result.data, function (i, item) {
                            WeekHTML += '<tr>'
                                + '<td>' + item.Title + '</td>'
                                + '<td>' + item.DateTime + '</td>'
                                + '<td>' + item.Content.replace(new RegExp("<img ", 'g'), "<img class='photo' style='max-height:36px;width:auto'").replace(new RegExp("<p", 'g'),"<p style='display:inline-block;' ") + '</td>'
                                + '</tr>';
                        });
                        $("#WeekList").append(WeekHTML);
                    }
                });
            },
             //废物处理
            InitBad: function () {
                //取详情
                controller.ajax({
                    url: "Temp/RepastDuck",
                    data: { Id: controller.GetParam("Id") },
                    async: false,
                    type: "get",
                    success: function (result) {
                         var BadHTML = "";
                        $.each(result.data, function (i, item) {
                            if (item.BadRemark == null) item.BadRemark = "";
                            BadHTML += '<tr>'
                                + '<td>' + item.BadType + '</td>'
                                + '<td>' + item.BadPhone + '</td>'
                                + '<td>' + item.BadTime + '</td>'
                                 + '<td>' + item.BadPerson + '</td>'
                                + '<td>' + item.BadRemark.replace(new RegExp("<img ", 'g'), "<img class='photo' style='max-height:36px;width:auto'").replace(new RegExp("<p", 'g'),"<p style='display:inline-block;' ") + '</td>'
                                + '</tr>';
                        });
                        $("#BadList").append(BadHTML);
                    }
                });
            },
             //留样
            InitTemp: function () {
                //取详情
                controller.ajax({
                    url: "Temp/GetAllSample",
                    data: { Id: controller.GetParam("Id") },
                    async: false,
                    type: "get",
                    success: function (result) {
                         var TempHTML = "";
                        $.each(result.data, function (i, item) {
                            if (item.Remark == null) item.Remark = "冷藏";
                            TempHTML += '<tr>'
                                + '<td>' + item.FoodsName + '</td>'
                                + '<td>' + item.Remark + '</td>'
                                + '<td>' + item.SavePerson + '</td>'
                                + '<td>' + item.SaveTime + '</td>'
                                 + '<td><img src="' + item.ReportImg + '" alt="" class="img-preview-sm" title="点击查看"/></td>'
                                + '</tr>';
                        });
                        $("#TempList").append(TempHTML);
                    }
                });
            },
             //抽检记录
            InitCheck: function () {
                //取详情
                controller.ajax({
                    url: "Temp/RepastCheck",
                    data: { Id: controller.GetParam("Id") },
                    async: false,
                    type: "get",
                    success: function (result) {
                         var CheckHTML = "";
                        $.each(result.data, function (i, item) {
                            CheckHTML += '<tr>'
                                + '<td>' + item.Title + '</td>'
                                 + '<td>' + item.DateTime + '</td>'
                                + '<td>' + item.Person + '</td>'
                                + '<td>' + item.Remark + '</td>'
                               
                                + '</tr>';
                        });
                        $("#CheckList").append(CheckHTML);
                    }
                });
            },
            //陪餐记录
            InitMarket: function () {
                //取详情
                controller.ajax({
                    url: "Temp/RepastMarket",
                    data: { Id: controller.GetParam("Id") },
                    async: false,
                    type: "get",
                    success: function (result) {
                         var MarketHTML = "";
                        $.each(result.data, function (i, item) {
                            MarketHTML += '<tr>'
                                + '<td>' + item.Title + '</td>'
                                 + '<td>' + item.DateTime + '</td>'
                                + '<td>' + item.Person + '</td>'
                                + '<td>' + item.Remark + '</td>'
                               
                                + '</tr>';
                        });
                        $("#MarketList").append(MarketHTML);
                    }
                });
            },
            //自查记录
            InitSelfCheck: function () {
                //取详情
                controller.ajax({
                    url: "Temp/RepastSelfCheck",
                    data: { Id: controller.GetParam("Id") },
                    async: false,
                    type: "get",
                    success: function (result) {
                         var SelfCheckHTML = "";
                        $.each(result.data, function (i, item) {
                            SelfCheckHTML += '<tr>'
                                + '<td>' + item.Title + '</td>'
                                 + '<td>' + item.DateTime + '</td>'
                                + '<td>' + item.Person + '</td>'
                                + '<td>' + item.Remark + '</td>'
                               
                                + '</tr>';
                        });
                        $("#SelfCheckList").append(SelfCheckHTML);
                    }
                });
            },
            //事件
            InitEvents: function () {
                $("#four").click(function () {
                    $("#play").contents().find(".vcp-player").css("margin", "0 auto");
                });
                $(".table-bordered img").each(function (i) {
                    var img = $(this);
                    $(this).wrap("<a href='" + $(this).attr("src") + "' target='_blank'></a>");
                });
            },
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
         function DateCompare(TimeLength) {
            // 获取当前日期
            let currentDate = new Date();
            let str = "" + currentDate.getFullYear() + "-";
            str += (currentDate.getMonth() + 1) + "-";
            str += currentDate.getDate();
            let today = new Date(str.replace("-", "/").replace("-", "/"));
        
            let fulfill_appointment_time = new Date(TimeLength.replace("年", "/").replace("月", "/").replace("日", ""));
            if (fulfill_appointment_time < today) {
                return true;
            }
            else {
                return false;
            }
        }
    </script>
}
