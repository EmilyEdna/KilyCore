
@{
    ViewData["Title"] = "用户管理";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                //设置表单
                this.$table = controller.Table("#tableList", { url: "GovtWeb/GetGovtInfoPage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Edit" });
            },
            //事件
            InitEvents: function () {
                //新增
                $("#add").on('click', function () {
                    controller.OpenWindow({
                        title: "新增用户",
                        type: 2,
                        height: "500px",
                        width: "800px",
                        url: "WebGovtManage/Department/UserDepartmentEdit",
                        callBack: function (result) {
                            result.$("#Edit").submit();
                        }
                    })
                });
                //完善资料
                $("#perfect").on('click', function () {
                    controller.OpenWindow({
                        title: "完善资料",
                        type: 2,
                        height: "500px",
                        width: "800px",
                        url: "WebGovtManage/Department/UserDepartmentEdit?Id=" + GovtInfo.Id,
                        callBack: function (result) {
                            result.$("#Edit").submit();
                        }
                    })
                });
                //导出Excel
                $("#export").on('click', function () {
                    if (options.IdListIn == null) {
                        controller.Msg("请选择需要导出的数据!");
                        return;
                    };
                    var data = Array.from(options.IdListIn);
                    if (data.length == 0) {
                        controller.Msg("请选择需要导出的数据!");
                        return;
                    }
                    $("#Ids").val(data);
                    $("#ApiUrl").val("GovtWeb/ExportGovtUser")
                    $("#Excel").submit();
                });
                options.IdList = null;
                //入库绑定复选框事件
                $('#tableList').on('uncheck.bs.table check.bs.table check-all.bs.table uncheck-all.bs.table', function (event, rows) {
                    options.IdList = controller.TableEvent(event.type, rows, 1);
                });
            },
            //行为
            action: {
                CheckFormatter: function (val, row, index) {
                    if (options.IdList != null) {
                        //集合先转数组
                        if ($.inArray(row.Id, Array.from(options.IdListIn)) != -1)
                            return {
                                checked: true
                            }
                    }
                },
                TableFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<button class="btn btn-sm btn-primary edit"><i class="fa fa-pencil-square-o"></i>编辑</button>');
                    if (row.AccountType != GovtInfo.AccountType)
                        action.push('<button class="btn btn-sm btn-primary del"><i class="fa fa-trash-o"></i>删除</button>');
                    return action.join("&nbsp;")
                },
                TableEvents: {
                    "click .del": function (event, val, row, index) {
                        controller.Confirm("确认删除？", function (bool) {
                            if (bool) {
                                controller.ajax({
                                    url: "GovtWeb/RemoveGovtInfo",
                                    data: { Id: row.Id },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    },
                    "click .edit": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "用户详情",
                            type: 2,
                            height: "500px",
                            width: "800px",
                            url: "WebGovtManage/Department/UserDepartmentEdit?Id=" + row.Id,
                            callBack: function (result) {
                                result.$("#Edit").submit();
                            }
                        })
                    }
                }//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{

}
<form method="post" action="/File/ExportExcel" id="Excel">
    <input type="hidden" name="Ids" id="Ids" />
    <input type="hidden" name="ApiUrl" id="ApiUrl" />
</form>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>用户管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="Edit">
                        <div class="col-sm-8 m-b-xs">
                            <div class="input-group">
                                <button type="button" class="btn btn-sm btn-white" id="add"><i class="fa fa-plus"></i>新增</button>
                                <button type="button" class="btn btn-sm btn-white" id="perfect"><i class="fa fa-plus"></i>完善资料</button>
                                <button type="button" class="btn btn-sm btn-white" id="export"><i class="fa fa-file-excel-o"></i>导出Excel</button>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input type="text" placeholder="机构名称" class="input-sm form-control" name="DepartName">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-search"></i>搜索</button>
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="Stutas" data-checkbox="true" data-halign="center" data-align="center" data-valign="middle" data-formatter="options.action.CheckFormatter"></th>
                                <th data-field="Account" data-halign="center" data-align="center" data-valign="middle">账号</th>
                                <th data-field="DepartName" data-halign="center" data-align="center" data-valign="middle">机构名称</th>
                                <th data-field="TrueName" data-halign="center" data-align="center" data-valign="middle">负责人</th>
                                <th data-field="Phone" data-halign="center" data-align="center" data-valign="middle">电话</th>
                                <th data-field="Email" data-halign="center" data-align="center" data-valign="middle">邮箱</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>