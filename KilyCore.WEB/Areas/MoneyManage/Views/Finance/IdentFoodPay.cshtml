
@{
    ViewData["Title"] = "餐饮认证";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                //设置表单
                this.$table = controller.Table("#tableList", { url: "Finance/IdentFoodPay", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#IdentPay" });
            },
            //事件
            InitEvents: function () {
            },
            //行为
            action: {
                TableFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<button class="btn btn-sm btn-primary finals"><i class="fa fa-check"></i>终审通过</button>');
                    action.push('<button class="btn btn-sm btn-primary finalf"><i class="fa fa-close"></i>终审不通过</button>');
                    action.push('<button class="btn btn-sm btn-primary shows"><i class="fa fa-eye"></i>查看凭证</button>');
                    return action.join("&nbsp;");
                },
                TableEvents: {
                    "click .finals": function (event, val, row, index) {
                        controller.Confirm("确认通过？", function (bool) {
                            if (bool) {
                                controller.ajax({
                                    url: "Finance/AuditIndetFoodPay",
                                    data: { Id: row.Id, Parameter: true },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    },
                    "click .finalf": function (event, val, row, index) {
                        controller.Confirm("确认未通过？", function (bool) {
                            if (bool) {
                                controller.ajax({
                                    url: "Finance/AuditIndetFoodPay",
                                    data: { Id: row.Id, Parameter: false },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    },
                    "click .shows": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "缴费凭证",
                            type: 2,
                            height: "90%",
                            width: "80%",
                            url: "MoneyManage/Finance/PaymentNotice?Id=" + row.Id + "&TableName=" + row.TableName,
                            callBack: function (result) {
                                result.popClose();
                            }
                        });
                    }
                }//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{

}
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>餐饮认证</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="IdentPay">
                        <div class="col-sm-8 m-b-xs">
                            <div class="input-group">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input type="text" placeholder="商家名称" class="input-sm form-control" name="MerchantName">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-search"></i>搜索</button>
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive m-t-sm">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="IdentNo" data-halign="center" data-align="center" data-valign="middle">认证编号</th>
                                <th data-field="MerchantName" data-halign="center" data-align="center" data-valign="middle">商家名称</th>
                                <th data-field="IdentStarName" data-halign="center" data-align="center" data-valign="middle">认证星级</th>
                                <th data-field="LinkPhone" data-halign="center" data-align="center" data-valign="middle">联系电话</th>
                                <th data-field="IdentStartTime" data-halign="center" data-align="center" data-valign="middle">开始时间</th>
                                <th data-field="IdentEndTime" data-halign="center" data-align="center" data-valign="middle">截止时间</th>
                                <th data-field="AuditTypeName" data-halign="center" data-align="center" data-valign="middle">审核状态</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


