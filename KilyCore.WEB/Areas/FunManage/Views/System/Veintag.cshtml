
@{
    ViewData["Title"] = "纹理二维码";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                //设置表单
                this.$table = controller.Table("#tableList", { url: "Function/GetTagPage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Tag" });
                if (SysUserInfo.AccountType != 20 && SysUserInfo.AccountType != 10)
                    $("#add").css({ display: "none" });
            },
            //事件
            InitEvents: function () {
                $("#add").on('click', function () {
                    controller.OpenWindow({
                        title: "录入标签",
                        type: 2,
                        height: "400px",
                        width: "600px",
                        url: "FunManage/System/RecordTag",
                        callBack: function (result) {
                            result.$("#Edit").submit();
                        }
                    })
                });
                $("#allow").on('click', function () {
                    controller.OpenWindow({
                        title: "分配标签",
                        type: 2,
                        height: "400px",
                        width: "650px",
                        url: "FunManage/System/AcceptTag",
                        callBack: function (result) {
                            result.$("#Edit").submit();
                        }
                    })
                });
            },
            //行为
            action: {
                TableFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<button class="btn btn-sm btn-primary del"><i class="fa fa-trash-o"></i>删除</button>');
                    return action.join("&nbsp;")
                },
                TableEvents: {
                    "click .del": function (event, val, row, index) {
                        controller.Confirm("确认删除？", function (bool) {
                            if (bool) {
                                controller.ajax({
                                    url: "Function/RemoveTag",
                                    data: { Id: row.Id },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    }
                }//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{

}

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>纹理标签</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="Tag">
                        <div class="col-sm-8 m-b-xs">
                            <div class="input-group">
                                <button type="button" class="btn btn-sm btn-white" id="add"><i class="fa fa-plus"></i>录入</button>
                                <button type="button" class="btn btn-sm btn-white" id="allow"><i class="fa fa-plus"></i>分配</button>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input type="text" class="input-sm form-control" name="" disabled>
                                <span class="input-group-btn">
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="StarSerialNo" data-halign="center" data-align="center" data-valign="middle">开始号段</th>
                                <th data-field="EndSerialNo" data-halign="center" data-align="center" data-valign="middle">结束号段</th>
                                <th data-field="TotalNo" data-halign="center" data-align="center" data-valign="middle">区间总数</th>
                                <th data-field="AcceptUserName" data-halign="center" data-align="center" data-valign="middle">接收人(公司)</th>
                                <th data-field="AllotTypeName" data-halign="center" data-align="center" data-valign="middle">分配类型</th>
                                <th data-field="IsAcceptName" data-halign="center" data-align="center" data-valign="middle">是否签收</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
