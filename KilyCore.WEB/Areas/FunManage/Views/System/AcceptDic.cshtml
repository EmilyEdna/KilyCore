
@{
    ViewData["Title"] = "AcceptDic";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section css{
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                $("#Id").val(controller.GetParam("Id"));
                options.GetProvince();
            },
            //获取省份
            GetProvince: function () {
                controller.ajax({
                    url: "System/GetProvince",
                    data: {},
                    type: "post",
                    async: false,
                    success: function (result) {
                        var html = '<option>===请选择===</option>';
                        $.each(result.data, function (i, obj) {
                            html += '<option value="' + obj.Id + '" data-id="' + obj.ProvinceId + '">' + obj.ProvinceName + '</option>';
                        });
                        $("#Pid").html(html);
                    }
                });
            },
            //事件
            InitEvents: function () {
             
                //验证
                controller.ValidateConfirm("#Edit");
            },
            //行为
            action: {}
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
<div class="ibox float-e-margins">
    <div class="ibox-content">
        <form class="orm-horizontal" method="post" action="Function/RecordAreaDic" id="Edit">
            <input  type="hidden" id="Id" name="DictionaryId"/>
            <table class="table table-hover table-bordered">
                <tr>
                    <th><label class="control-label">选择省份</label></th>
                    <td class="has-warning" colspan="3">
                        <select type="select" name="ProvinceId" id="Pid" class="form-control">
                            <option>===请选择===</option>
                        </select>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>