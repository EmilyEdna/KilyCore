
@{
    ViewData["Title"] = "CookInfo";
    Layout = "~/Views/Shared/BaseAreaView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                //设置表单
                this.$table = controller.Table("#tableList", { url: "Cook/GetCookInfoPage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Edit" });
            },
            //事件
            InitEvents: function () {
            },
            //行为
            action: {
                TableFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<button class="btn btn-sm btn-primary detail"><i class="fa fa-trash-o"></i>详情</button>');
                    if (row.AuditType <= 20)
                        action.push('<button class="btn btn-sm btn-primary audit"><i class="fa fa-pencil-square-o"></i>审核</button>');
                    return action.join("&nbsp;")
                },
                TableEvents: {
                    "click .detail": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "厨师详情",
                            type: 2,
                            height: "450px",
                            width: "700px",
                            url: "CookManage/Cook/CookInfoDetail?Id=" + row.Id,
                            callBack: function (result) {
                                result.popClose();
                            }
                        });
                    },
                    "click .audit": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "资料审核",
                            type: 1,
                            height: "260px",
                            width: "400px",
                            url: "CookManage/Cook/CookInfoAudit?Id=" + row.Id + "&TableName=" + row.TableName,
                            callBack: function (result) {
                                result.$("#Edit").submit();
                            }
                        });
                    }
                }//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
        //来至父页面的树选中事件
        function nodeSelected(event, node) {
            options.$table.queryParams.AreaTree = node.id;
            $("#Edit").submit();
            //清空查询参数
            options.$table.queryParams = {};
        }
    </script>
}
@section css{

}
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>资料审核</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="Edit">
                        <div class="col-sm-11 m-b-xs">
                            <div class="input-group">
                            </div>
                        </div>
                        <div class="col-sm-1">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="TrueName" data-halign="center" data-align="center" data-valign="middle">真实姓名</th>
                                <th data-field="IdCardNo" data-halign="center" data-align="center" data-valign="middle">身份证号</th>
                                <th data-field="AuditTypeName" data-halign="center" data-align="center" data-valign="middle">审核状态</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>