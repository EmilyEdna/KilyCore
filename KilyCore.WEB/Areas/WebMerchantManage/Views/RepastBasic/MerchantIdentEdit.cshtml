
@{
    ViewData["Title"] = "商家认证";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section css{
    <style>
        .ibox-content {
            border-top-style: none;
        }
    </style>
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                $("#IdentNo").val("V" + controller.FormatDate("YYYYMMDDHHmmss"));
                controller.LayDate({ elem: "#IdentStartTime", value: controller.FormatDate("YYYY-MM-DD HH:mm:ss") });
                $("input[name='InfoId']").val(RepastUser.Id);
                $("input[name='DiningType']").val(RepastUser.DiningType);
                $("input[name='MerchantName']").val(RepastUser.MerchantName);
            },
            //设置文件值
            SetFileValue: function (data, elememt) {
                var files = $(elememt).val();
                if (files != null && files != "" && files != undefined) {
                    files += "," + data;
                    $(elememt).val(files);
                } else {
                    $(elememt).val(data);
                }
            },
            //事件
            InitEvents: function () {
                options.Comom();
                controller.ValidateConfirm("#Edit");
            },
            //通用上传
            Comom: function () {
                //文件上传-身份证
                controller.Upload({
                    url: "File/UploadImg",
                    element: "#upload-input-1",
                    maxNum: 2,
                    node: '#Img1',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#ImgCard");
                    }
                });
                //文件上传-申请
                controller.Upload({
                    url: "File/UploadImg",
                    element: "#upload-input-2",
                    maxNum: 2,
                    node: '#Img2',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#ImgApply");
                    }
                });
                //文件上传-调查
                controller.Upload({
                    url: "File/UploadImg",
                    element: "#upload-input-3",
                    maxNum: 2,
                    node: '#Img3',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#ImgResearch");
                    }
                });
                //文件上传-协议
                controller.Upload({
                    url: "File/UploadImg",
                    element: "#upload-input-4",
                    maxNum: 2,
                    node: '#Img4',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#ImgAgreement");
                    }
                });
                //文件上传-其他
                controller.Upload({
                    url: "File/UploadImg",
                    element: "#upload-input-5",
                    maxNum: 2,
                    node: '#Img5',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#ImgOther");
                    }
                });
                //文件上传-原料购买
                controller.Upload({
                    url: "File/UploadImg",
                    element: "#upload-input-6",
                    maxNum: 2,
                    node: '#Img6',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#ImgMaterialOrder");
                    }
                });
                //文件上传-消毒证明
                controller.Upload({
                    url: "File/UploadImg",
                    element: "#upload-input-7",
                    maxNum: 2,
                    node: '#Img7',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#ImgDisinfection");
                    }
                });
                //文件上传-储藏证明
                controller.Upload({
                    url: "File/UploadImg",
                    element: "#upload-input-8",
                    maxNum: 2,
                    node: '#Img8',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#ImgMaterialSave");
                    }
                });
                //文件上传-处理
                controller.Upload({
                    url: "File/UploadImg",
                    element: "#upload-input-9",
                    maxNum: 2,
                    node: '#Img9',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#ImgAbandoned");
                    }
                });
                //文件上传-留样
                controller.Upload({
                    url: "File/UploadImg",
                    element: "#upload-input-10",
                    maxNum: 2,
                    node: '#Img10',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#ImgSample");
                    }
                });
                //文件上传-从业证明
                controller.Upload({
                    url: "File/UploadImg",
                    element: "#upload-input-11",
                    maxNum: 2,
                    node: '#Img11',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#ImgWorkingPerson");
                    }
                });
            },
            //行为
            action: {
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
<div class="tabs-container" style="margin-top:10px;">
