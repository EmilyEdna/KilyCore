            <input name="GoodsId" id="gid" type="hidden" />
            <input name="flag" id="flag" type="hidden" />
            <input name="VersionType" id="ver" type="hidden" />
        </form>
        <form class="form-horizontal" method="post" action="RepastWeb/SaveContract" id="Edit">
