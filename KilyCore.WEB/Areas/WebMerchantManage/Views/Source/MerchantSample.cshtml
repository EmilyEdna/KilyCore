
@{
    ViewData["Title"] = "留样管理";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
<script>
    //配置
    var options = {
        Init: function () {
            this.InitDom();
            this.InitEvents();
        },
        //元素
        InitDom: function () {
            //恢复高度
            $(window).resize(function (e) {
                window.setTimeout(function () {
                    options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                }, 200);
                e.stopPropagation();
            });
            //设置表单
            this.$table = controller.Table("#tableList", { url: "RepastWeb/GetSamplePage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Edit" });
        },
        //事件
        InitEvents: function () {
            $("#add").on('click', function () {
                controller.OpenWindow({
                    title: "新增留样信息",
                    type: 2,
                    height: "90%",
                    width: "80%",
                    url: "WebMerchantManage/Source/MerchantSampleEdit",
                    callBack: function (result) {
                        result.$("#Edit").submit();
                    }
                })
            });
        },
        //行为
        action: {
            ImgFormatter: function (val, row, index) {
                var action = [];
                if (row.HealthCard != null) {
                    for (var i = 0; i < row.HandleImg.split(',').length; i++) {
                        action.push('<img class="photo" src="' + row.HandleImg[i] + '" style="width:48px;height:32px;"">')
                    }
                }
                return action.join("&nbsp;");
            },
            ImgEvents: {
                "click .photo": function (event, val, row, index) {
                    var option = {
                        title: "现场图",
                        data: [{
                            alt: "现场图",
                            src: $(this).attr("src")
                        }]
                    };
                    controller.Photos(option);
                }
            },
            TableFormatter: function (val, row, index) {
                var action = [];
                action.push('<button class="btn btn-sm btn-primary del"><i class="fa fa-trash-o"></i>删除</button>');
                return action.join("&nbsp;")
            },
            TableEvents: {
                "click .del": function (event, val, row, index) {
                    controller.Confirm("确认删除？", function (bool) {
                        if (bool) {
                            controller.ajax({
                                url: "RepastWeb/RemoveSample",
                                data: { Id: row.Id },
                                type: 'post',
                                success: function (result) {
                                    options.$table.refresh();
                                }
                            });
                        }
                    });
                }
            }//表单事件结束
        }//行为结束
    };
    //初始化
    $(document).ready(function () {
        options.Init();
    });
</script>
@section css{

}
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>留样管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="Edit">
                        <div class="col-sm-8 m-b-xs">
                            <div class="input-group">
                                <button type="button" class="btn btn-sm btn-white" id="add"><i class="fa fa-plus"></i>新增</button>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input type="text" placeholder="菜品名称" class="input-sm form-control" name="DishName">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-search"></i>搜索</button>
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="DishName" data-halign="center" data-align="center" data-valign="middle">菜品名称</th>
                                <th data-field="Phone" data-halign="center" data-align="center" data-valign="middle">电话</th>
                                <th data-field="SampleTime" data-halign="center" data-align="center" data-valign="middle">留样时间</th>
                                <th data-field="OperatUser" data-halign="center" data-align="center" data-valign="middle">操作人</th>
                                <th data-formatter="options.action.ImgFormatter" data-events="options.action.ImgEvents" data-halign="center" data-align="center" data-valign="middle">留样图片</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>