@{
    ViewData["Title"] = "原料仓库";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                //设置表单
                this.$table = controller.Table("#tableListSet", { async: false, url: "RepastWeb/GetInStoragePage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#InStock" });
            },
            //事件
            InitEvents: function () {
                $("li").find("a").on('click', function () {
                    if ($(this).attr("href") == "#tab-1")
                        this.$table = controller.Table("#tableListSet", { async: false, url: "RepastWeb/GetInStoragePage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#InStock" });
                    else
                        this.$table = controller.Table("#tableListOut", { async: false, url: "RepastWeb/GetOutStoragePage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#OutStock" });
                });
                $("#add").on('click', function () {
                    controller.OpenWindow({
                        title: "新增入库",
                        type: 2,
                        height: "90%",
                        width: "80%",  
                        url: "WebMerchantManage/Stock/MerchantInStorage",
                        callBack: function (result) {
                            result.$("#Edit").submit();
                        }
                    });
                });
                //导出Excel-入库
                $("#exportIn").on('click', function () {
                    if (options.IdListIn == null) {
                        controller.Msg("请选择需要导出的数据!");
                        return;
                    };
                    var data = Array.from(options.IdListIn);
                    if (data.length == 0) {
                        controller.Msg("请选择需要导出的数据!");
                        return;
                    }
                    $("#Ids").val(data);
                    $("#ApiUrl").val("RepastWeb/ExportStuffInStockFile")
                    $("#Excel").submit();
                });
                //导出Excel-出库
                $("#exportOut").on('click', function () {
                    if (options.IdListOut == null) {
                        controller.Msg("请选择需要导出的数据!");
                        return;
                    };
                    var data = Array.from(options.IdListOut);
                    if (data.length == 0) {
                        controller.Msg("请选择需要导出的数据!");
                        return;
                    }
                    $("#ApiUrl").val("RepastWeb/ExportStuffOutStockFile")
                    $("#Ids").val(data);
                    $("#Excel").submit();
                });
                options.IdListIn = null;
                options.IdListOut = null;
                //入库绑定复选框事件
                $('#tableListSet').on('uncheck.bs.table check.bs.table check-all.bs.table uncheck-all.bs.table', function (event, rows) {
                    options.IdListIn = controller.TableEvent(event.type, rows, -1);
                });
                //出库绑定复选框事件
                $('#tableListOut').on('uncheck.bs.table check.bs.table check-all.bs.table uncheck-all.bs.table', function (event, rows) {
                    options.IdListOut = controller.TableEvent(event.type, rows, 1);
                });
            },
            //行为
            action: {
                CheckInFormatter: function (val, row, index) {
                    if (options.IdList != null) {
                        //集合先转数组
                        if ($.inArray(row.Id, Array.from(options.IdListIn)) != -1)
                            return {
                                checked: true
                            }
                    }
                },
                CheckOutFormatter: function (val, row, index) {
                    if (options.IdList != null) {
                        //集合先转数组
                        if ($.inArray(row.Id, Array.from(options.IdListOut)) != -1)
                            return {
                                checked: true
                            }
                    }
                },
                TableFormatter: function (val, row, index) {
                    var action = [];
                    if (row.InStorageNum != undefined) {
                        action.push('<button class="btn btn-sm btn-primary out"><i class="fa fa-pencil-square-o"></i>出库</button>');
                        action.push('<button class="btn btn-sm btn-primary detail"><i class="fa fa-pencil-square-o"></i>入库记录</button>');
                    }
                   // action.push('<button class="btn btn-sm btn-primary del"><i class="fa fa-trash-o"></i>删除</button>');
                    return action.join("&nbsp;");
                },
                TableEvents: {
                    "click .del": function (event, val, row, index) {
                        if (row.InStorageNum != null) {
                            controller.Confirm("确认删除?", function (bool) {
                                if (bool) {
                                    controller.ajax({
                                        url: "RepastWeb/RemoveInStorage",
                                        data: { Id: row.Id },
                                        type: "post",
                                        success: function (result) {
                                            options.$table.refresh();
                                        }
                                    });
                                }
                            });
                        } else {
                            controller.Confirm("确认删除?", function (bool) {
                                if (bool) {
                                    controller.ajax({
                                        url: "RepastWeb/RemoveOutStorage",
                                        data: { Id: row.Id },
                                        type: "post",
                                        success: function (result) {
                                            options.$table.refresh();
                                        }
                                    });
                                }
                            });
                        }
                    },
                    "click .out": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "新增出库",
                            type: 2,
                            height: "90%",
                            width: "80%",  
                            url: "WebMerchantManage/Stock/MerchantOutStorage?Id=" + row.Id + "&Name=" + row.IngredientName,
                            callBack: function (result) {
                                result.$("#Edit").submit();
                            }
                        });
                    },
                    "click .detail": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "查看详情",
                            type: 2,
                            height: "90%",
                            width: "80%",  
                            url: "WebMerchantManage/Stock/MerchantInStorage?Id=" + row.Id,
                            callBack: function (result) {
                                result.popClose();
                            }
                        });
                    }
                },//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
<form method="post" action="/File/ExportExcel" id="Excel">
    <input type="hidden" name="Ids" id="Ids" />
    <input type="hidden" name="ApiUrl" id="ApiUrl" />
</form>
<!--导航-->
<div class="tabs-container" style="padding: 15px; background: #f5f5f5;">
    <ul class="nav nav-tabs" style="border-radius: 8px 8px 0 0; box-shadow: 0px -2px 16px 0px rgba(47,64,80,0.16);">
        <li class="active">
            <a data-toggle="tab" href="#tab-1" aria-expanded="true" style="border-left: #fff;"> 入库清单</a>
        </li>
        <li>
            <a data-toggle="tab" href="#tab-2" aria-expanded="false">出库清单</a>
        </li>
    </ul>
    <div class="tab-content">
        <div id="tab-1" class="tab-pane active">
            <div class="ibox-content ibox-content-c">
                <div class="row">
                    <form id="InStock">
                        <div class="col-sm-8 m-b-xs">
                            <div class="input-group">
                                <button type="button" class="btn btn-sm btn-white" id="add"><i class="fa fa-plus"></i>新增</button>
                                <button type="button" class="btn btn-sm btn-white" id="exportIn"><i class="fa fa-file-excel-o"></i>导出Excel</button>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input type="text" placeholder="原料名称" class="input-sm form-control" name="IngredientName">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-search"></i>搜索</button>
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive m-t-sm">
                    <table id="tableListSet" class="table">
                        <thead>
                            <tr>
                                <th data-field="Stutas" data-checkbox="true" class="th-center" data-formatter="options.action.CheckInFormatter"></th>
                                <th data-field="BatchNo" class="th-center">批次号</th>
                                <th data-field="IngredientName" class="th-center">食材名称</th>
                                <th data-field="InStorageNum" class="th-center">数量</th>
                                <th data-field="Supplier" class="th-center">供应商</th>
                                <th data-field="BuyUser" class="th-center">负责人</th>
                                <th data-field="StockMsg" class="th-center">库存状况</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" class="th-center">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div id="tab-2" class="tab-pane">
            <div class="ibox-content ibox-content-c">
                <div class="row">
                    <form id="OutStock">
                        <div class="col-sm-8 m-b-xs">
                            <button type="button" class="btn btn-sm btn-white" id="exportOut"><i class="fa fa-file-excel-o"></i>导出Excel</button>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input type="text" placeholder="原料名称" class="input-sm form-control" name="IngredientName">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-search"></i>搜索</button>
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive m-t-sm">
                    <table id="tableListOut" class="table">
                        <thead>
                            <tr>
                                <th data-field="Stutas" data-checkbox="true" class="th-center" data-formatter="options.action.CheckOutFormatter"></th>
                                <th data-field="InBatchNo" class="th-center">入库批次</th>
                                <th data-field="BatchNo" class="th-center">出库批次</th>
                                <th data-field="IngredientName" class="th-center">食材名称</th>
                                <th data-field="OutStorageNum" class="th-center">出库数量</th>
                                <th data-field="InStorageEx" class="th-center">库存</th>
                                <th data-field="OutStorageTime" class="th-center">出库时间</th>
                                <th data-field="OutUser" class="th-center">负责人</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" class="th-center">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>