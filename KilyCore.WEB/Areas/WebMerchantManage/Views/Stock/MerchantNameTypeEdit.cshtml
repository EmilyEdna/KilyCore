
@{
    ViewData["Title"] = "名称编辑";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section css{
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                $("#InfoId").val(RepastUser.Id);
                options.GetList();
            },
            //获取列表
            GetList: function () {
                controller.Select({
                    document: '.selectpicker',
                    arrelemnt: ['#Spec'],
                    url: 'RepastWeb/GetDictionaryList',
                });
                $("#Spec").on('changed.bs.select', function () {
                    $('input[name="Spec"]').val($(this).val());
                });
            },
            //事件
            InitEvents: function () {
                //验证
                controller.ValidateConfirm("#Edit");
            },
            //行为
            action: {}
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
<div class="ibox float-e-margins">
    <div class="ibox-content">
        <form class="orm-horizontal" method="post" action="RepastWeb/EditNames" id="Edit">
            <input type="hidden" name="InfoId" id="InfoId" />
            <table class="table table-hover table-bordered">
                <tr>
                    <th><label class="control-label">名称</label></th>
                    <td class="has-warning">
                        <input type="text" class="form-control" name="TypeNames" />
                    </td>
                    <th><label class="control-label">类型</label></th>
                    <td class="has-warning">
                        <select type="select" name="Types" class="form-control">
                            <option value="1">原料</option>
                            <option value="2">物品</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th><label class="control-label">规格</label></th>
                    <td class="has-warning" colspan="3">
                        <select type="select" class="selectpicker form-control" data-max-options="1" id="Spec" multiple data-live-search="true" data-live-search-placeholder="搜索"></select>
                    </td>
                </tr>
                
            </table>
        </form>
    </div>
</div>