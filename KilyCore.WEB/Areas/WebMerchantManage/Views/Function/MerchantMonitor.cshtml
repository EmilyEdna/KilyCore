
@{
    ViewData["Title"] = "实时监控";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                //设置表单
                this.$table = controller.Table("#tableList", { url: "RepastWeb/GetVideoPage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Edit" });
            },
            //事件
            InitEvents: function () {
                $("#add").on('click', function () {
                    controller.OpenWindow({
                        title: "新增视频",
                        type: 2,
                        height: "400px",
                        width: "650px",
                        url: "WebMerchantManage/Function/MerchantMonitorEdit",
                        callBack: function (result) {
                            result.$("#Edit").submit();
                        }
                    })
                });
            },
            //行为
            action: {
                ImgFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<img class="photo" src="' + row.CoverPhoto + '" style="width:48px;height:32px;"">')
                    return action.join("&nbsp;");
                },
                ImgEvents: {
                    "click .photo": function (event, val, row, index) {
                        var option = {
                            title: "封面图",
                            data: [{
                                alt: "封面图",
                                src: $(this).attr("src")
                            }]
                        };
                        controller.Photos(option);
                    }
                },
                TableFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<button class="btn btn-sm btn-primary play"><i class="fa fa-play"></i>播放</button>');
                    if (!row.IsIndex) {
                        action.push('<button class="btn btn-sm btn-primary watch"><i class="fa fa-eye"></i>首页显示</button>');
                    } else {
                        action.push('<button class="btn btn-sm btn-primary closeye"><i class="fa fa-eye"></i>关闭显示</button>');
                    }
                    action.push('<button class="btn btn-sm btn-primary del"><i class="fa fa-trash-o"></i>删除</button>');
                    return action.join("&nbsp;")
                },
                TableEvents: {
                    "click .play": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "视频播放",
                            type: 2,
                            maxmin: false,
                            height: "520px",
                            width: "435px",
                            url: "StaticHtml/PlayVedio.html?addr=" + row.VideoAddress + "&cover=" + row.CoverPhoto,
                            callBack: function (result) {
                                result.popClose();
                            }
                        })
                    },
                    "click .del": function (event, val, row, index) {
                        controller.Confirm("确认删除？", function (bool) {
                            if (bool) {
                                controller.ajax({
                                    url: "RepastWeb/DeleteVideo",
                                    data: { Id: row.Id },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    },
                    "click .watch": function (event, val, row, index) {
                        controller.Confirm("确认首页显示？", function (bool) {
                            if (bool) {
                                controller.ajax({
                                    url: "RepastWeb/ShowVideo",
                                    data: { Id: row.Id },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    },
                    "click .closeye": function (event, val, row, index) {
                        controller.Confirm("确认关闭显示？", function (bool) {
                            if (bool) {
                                controller.ajax({
                                    url: "RepastWeb/ShowVideo",
                                    data: { Id: row.Id, Parameter: false },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    }
                }//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{

}
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>视频监控</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="Edit">
                        <div class="col-sm-11 m-b-xs">
                            <div class="input-group">
                                <button type="button" class="btn btn-sm btn-white" id="add"><i class="fa fa-plus"></i>新增</button>
                            </div>
                        </div>
                        <div class="col-sm-1">
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="MonitorAddress" data-halign="center" data-align="center" data-valign="middle">监控区域</th>
                                <th data-field="VideoAddress" data-halign="center" data-align="center" data-valign="middle">视频链接</th>
                                <th data-formatter="options.action.ImgFormatter" data-events="options.action.ImgEvents" data-halign="center" data-align="center" data-valign="middle">封面图</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>