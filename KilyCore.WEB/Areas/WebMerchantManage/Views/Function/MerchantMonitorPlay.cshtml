
@{
    ViewData["Title"] = "视频播放";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script src="//imgcache.qq.com/open/qcloud/video/vcplayer/TcPlayer-2.2.2.js" charset="utf-8"></script>
}
<div class="ibox float-e-margins">
    <div class="ibox-content">
        <div id="video" style="width:100%; height:auto;"></div>
        <script>
            var player = new TcPlayer('video', {
                "m3u8": controller.GetParam("addr"),
                "autoplay": true,      //iOS下safari浏览器，以及大部分移动端浏览器是不开放视频自动播放这个能力的
                "coverpic": controller.GetParam("cover"),
                "width": '420',//视频的显示宽度，请尽量使用视频分辨率宽度
                "height": '390'//视频的显示高度，请尽量使用视频分辨率高度
            });
        </script>
    </div>
</div>