
@{
    ViewData["Title"] = "环境报告";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                //设置表单
                this.$table = controller.Table("#tableList", { url: "EnterpriseWeb/GetEnvAttachPage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Edit" });
            },
            //事件
            InitEvents: function () {
                $("#add").on('click', function () {
                    controller.OpenWindow({
                        title: "新增报告",
                        type: 2,
                        height: "90%",
                        width: "80%",
                        url: "WebCompanyManage/Develop/AmbientAttachEdit",
                        callBack: function (result) {
                            result.$("#Edit").submit();
                        }
                    })
                });
            },
            //行为
            action: {
                ImgFormatter1: function (val, row, index) {
                    var action = [];
                    if (row.Certification != null)
                        action.push('<img class="photo" src="' + row.AirReport + '" style="width:48px;height:32px;"">')
                    return action.join("&nbsp;");
                },
                ImgFormatter2: function (val, row, index) {
                    var action = [];
                    if (row.Certification != null)
                        action.push('<img class="photo" src="' + row.MetalReport + '" style="width:48px;height:32px;"">')
                    return action.join("&nbsp;");
                },
                ImgFormatter3: function (val, row, index) {
                    var action = [];
                    if (row.Certification != null)
                        action.push('<img class="photo" src="' + row.SoilReport + '" style="width:48px;height:32px;"">')
                    return action.join("&nbsp;");
                },
                ImgFormatter4: function (val, row, index) {
                    var action = [];
                    if (row.Certification != null)
                        action.push('<img class="photo" src="' + row.WaterReport + '" style="width:48px;height:32px;"">')
                    return action.join("&nbsp;");
                },
                TableFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<button class="btn btn-sm btn-primary del"><i class="fa fa-trash-o"></i>删除</button>');
                    return action.join("&nbsp;")
                },
                ImgEvents: {
                    "click .photo": function (event, val, row, index) {
                        var option = {
                            title: "报告图片",
                            data: [{
                                alt: "报告图片",
                                src: $(this).attr("src")
                            }]
                        };
                        controller.Photos(option);
                    }
                },
                TableEvents: {
                    "click .del": function (event, val, row, index) {
                        controller.Confirm("确认删除？", function (bool) {
                            if (bool) {
                                controller.ajax({
                                    url: "EnterpriseWeb/RemoveEnvAttach",
                                    data: { Id: row.Id },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    }
                }//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{

}

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>环境报告</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                        <div class="col-sm-12 m-b-xs">
                            <div class="input-group">
                                <button type="button" class="btn btn-sm btn-white" id="add"><i class="fa fa-plus"></i>新增</button>
                            </div>
                        </div>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="BatchNo" data-halign="center" data-align="center" data-valign="middle">育苗批次</th>
                                <th data-field="RecordTime" data-halign="center" data-align="center" data-valign="middle">报告时间</th>
                                <th data-formatter="options.action.ImgFormatter1" data-events="options.action.ImgEvents" data-halign="center" data-align="center" data-valign="middle">大气报告</th>
                                <th data-formatter="options.action.ImgFormatter2" data-events="options.action.ImgEvents" data-halign="center" data-align="center" data-valign="middle">金属报告</th>
                                <th data-formatter="options.action.ImgFormatter3" data-events="options.action.ImgEvents" data-halign="center" data-align="center" data-valign="middle">土壤报告</th>
                                <th data-formatter="options.action.ImgFormatter4" data-events="options.action.ImgEvents" data-halign="center" data-align="center" data-valign="middle">水质报告</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
