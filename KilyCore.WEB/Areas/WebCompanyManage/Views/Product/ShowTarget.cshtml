
@{
    ViewData["Title"] = "指标参考";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section css{
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                $("#CompanyId").val(CompanyInfo.Id);
                var Guid = controller.GetParam("Id");
                $("#Manager").val(controller.GetParam("Manager"));
                $("#ProBatchId").val(Guid);
                this.BindPare(Guid);
            },
            //绑定对比值
            BindPare: function (Guid) {
                controller.ajax({
                    url: "EnterpriseWeb/GetProBatchAttachList",
                    data: { Id: Guid },
                    type: "post",
                    async: false,
                    success: function (result) { 
                        var html = '';
                        $.each(result.data, function (i, obj) {
                            html += '<tr>';
                            html += '<td class="text-warning">' + obj.TargetName + '</td>';
                            html += '<td class="text-warning">' + obj.TargetUnit + '</td>';
                            html += '<td class="text-warning">' + obj.TargetUnit + '</td>';
                            if (obj.Result == undefined || obj.ResultTime == undefined) {
                                html += '<td class="text-warning"><input type="text" class="form-control" name="Result"></td>';
                                html += '<td class="text-warning"><input type="text" class="form-control" name="ResultTime" id="ResultTime"></td>';
                                html += '<td class="text-warning">' + controller.GetParam("Manager")+'</td>';
                            } else { 
                                html += '<td class="text-warning">' + obj.Result+'</td>';
                                html += '<td class="text-warning">' + obj.ResultTime + '</td>';
                                html += '<td class="text-warning">' + controller.GetParam("Manager") + '</td>';
                            }
                            html = '</tr>';
                        });
                        $("#content").html(html);
                        controller.LayDate({ elem: "#ResultTime" });
                    }
                });
            },
            //事件
            InitEvents: function () {
                //验证
                controller.ValidateConfirm("#Edit");
            },
            //行为
            action: {}
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
<div class="ibox float-e-margins">
    <div class="ibox-content">
        <form class="orm-horizontal" method="post" action="EnterpriseWeb/EditProBatchAttach" id="Edit">
            <input type="hidden" id="CompanyId" name="CompanyId" />
            <input type="hidden" id="ProBatchId" name="ProBatchId" />
            <input  type="hidden" id="Manager" name="Manager"/>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>
                            <span class="text-navy">指标名称</span>
                        </th>
                        <th>
                            <span class="text-navy">指标单位</span>
                        </th>
                        <th>
                            <span class="text-navy">指标限制值</span>
                        </th>
                        <th>
                            <span class="text-navy">记录结果</span>
                        </th>
                        <th>
                            <span class="text-navy">记录时间</span>
                        </th>
                        <th>
                            <span class="text-navy">负责人</span>
                        </th>
                    </tr>
                </thead>
                <tbody id="content"></tbody>
                <tfoot>
                    <tr>
                        <th colspan="6" class="text-danger">
                            没有更多记录...
                        </th>
                    </tr>
                </tfoot>
            </table>
        </form>
    </div>
</div>