
@{
    ViewData["Title"] = "产品批次";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                //设置表单
                this.$table = controller.Table("#tableList", { url: "EnterpriseWeb/GetProBatchPage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Edit"});
            },
            //事件
            InitEvents: function () {
                $("#add").on('click', function () {
                    controller.OpenWindow({
                        title: "新增生产批次",
                        type: 2,
                        height: "500px",
                        width: "700px",
                        url: "WebCompanyManage/Product/GoodsBatchEdit",
                        callBack: function (result) {
                            result.$("#Edit").submit();
                        }
                    })
                });
            },
            //行为
            action: {
                TableFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<button class="btn btn-sm btn-primary del"><i class="fa fa-trash-o"></i>删除</button>');
                    action.push('<button class="btn btn-sm btn-primary watch"><i class="fa fa-eye"></i>指标参考</button>');
                    return action.join("&nbsp;")
                },
                TableEvents: {
                    "click .del": function (event, val, row, index) {
                        controller.Confirm("确认删除？", function (bool) {
                            if (bool) {
                                controller.ajax({
                                    url: "EnterpriseWeb/RemoveProBatch",
                                    data: { Id: row.Id },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    },
                    "click .watch": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "指标参考",
                            type: 2,
                            height: "600px",
                            width: "800px",
                            url: "WebCompanyManage/Product/ShowTarget?Id=" + row.Id + "&Manager=" + row.Manager,
                            callBack: function (result) {
                                result.$("#Edit").submit();
                            }
                        })
                    },
                }//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{

}

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>产品批次</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="Edit">
                        <div class="col-sm-8 m-b-xs">
                            <div class="input-group">
                                <button type="button" class="btn btn-sm btn-white" id="add"><i class="fa fa-plus"></i>新增</button>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input type="text" placeholder="产品系列" class="input-sm form-control" name="SeriesName">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-search"></i>搜索</button>
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="BatchNo" data-halign="center" data-align="center" data-valign="middle">批次号</th>
                                <th data-field="DeviceName" data-halign="center" data-align="center" data-valign="middle">设备名称</th>
                                <th data-field="SeriesName" data-halign="center" data-align="center" data-valign="middle">产品系列</th>
                                <th data-field="Manager" data-halign="center" data-align="center" data-valign="middle">负责人</th>
                                <th data-field="StartTime" data-halign="center" data-align="center" data-valign="middle">生产开始时间</th>
                                <th data-field="MaterialName" data-halign="center" data-align="center" data-valign="middle">原辅料</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>