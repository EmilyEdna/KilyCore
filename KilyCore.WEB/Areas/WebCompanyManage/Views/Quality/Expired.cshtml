
@{
    ViewData["Title"] = "过期产品";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                //设置表单
                this.$table = controller.Table("#tableList", { url: "EnterpriseWeb/GetExpiredPage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Edit" });
            },
            //事件
            InitEvents: function () {
                $("#watch").on('click', function () {
                    controller.OpenWindow({
                        title: "查看过期处理",
                        type: 2,
                        height: "600px",
                        width: "1200px",
                        url: "WebCompanyManage/Quality/Expireds",
                        callBack: function (result) {
                            result.$("#Edit").submit();
                        }
                    })
                });
            },
            //行为
            action: {
                TableFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<button class="btn btn-sm btn-primary edit"><i class="fa fa-pencil-square-o"></i>新增处理</button>');
                    return action.join("&nbsp;")
                },
                TableEvents: {
                    "click .edit": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "新增过期处理",
                            type: 2,
                            height: "400px",
                            width: "700px",
                            url: "WebCompanyManage/Quality/ExpiredEdit?Id=" + row.Id + "&Type=" + row.ProductType,
                            callBack: function (result) {
                                result.$("#Edit").submit();
                            }
                        })
                    }
                }//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{

}

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>过期产品</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="Edit">
                        <div class="col-sm-8 m-b-xs">
                            <div class="input-group">
                                <button type="button" class="btn btn-sm btn-white" id="watch"><i class="fa fa-eye"></i>查看处理</button>
                            </div>
                        </div>
                        <div class="col-sm-4">
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="GoodsBatchNo" data-halign="center" data-align="center" data-valign="middle">入库批次</th>
                                <th data-field="ProductName" data-halign="center" data-align="center" data-valign="middle">产品名称</th>
                                <th data-field="ProductType" data-halign="center" data-align="center" data-valign="middle">产品类型</th>
                                <th data-field="ProductTime" data-halign="center" data-align="center" data-valign="middle">生产时间</th>
                                <th data-field="ExpiredDate" data-halign="center" data-align="center" data-valign="middle">保质期(天)</th>
                                <th data-field="ExpiredTime" data-halign="center" data-align="center" data-valign="middle">过期时间</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>