
@{
    ViewData["Title"] = "MaterCheck";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section css{
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                $("#Id").val(controller.GetParam("Id"));
            },
            //事件
            InitEvents: function () {
                //质检列表
                controller.ajax({
                    url: "EnterpriseWeb/GetCheckMaterial",
                    data: {},
                    type: "post",
                    async: false,
                    success: function (result) {
                        var html = '<option>==请选择==</option>';
                        $.each(result.data, function (i, obj) {
                            html += '<option value="' + obj.Id + '">' + obj.CheckName + '</option>';
                        });
                        $("#CheckMaterialId").html(html);
                    }
                });
                //验证
                controller.ValidateConfirm("#Edit");
            },
            //行为
            action: {}
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
<div class="ibox float-e-margins">
    <div class="ibox-content">
        <form class="form-horizontal" method="post" action="EnterpriseWeb/UpdateMaterStockCheck" id="Edit">
            <input type="hidden" name="Id" id="Id" />
            <table class="table table-hover table-bordered">
                <tr>
                    <th><label class="control-label">产品质检</label></th>
                    <td class="has-warning" colspan="3">
                        <select type="select" class="form-control" name="CheckMaterialId" id="CheckMaterialId"></select>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>