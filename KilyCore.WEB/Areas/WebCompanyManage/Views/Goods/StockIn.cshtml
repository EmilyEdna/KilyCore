
@{
    ViewData["Title"] = "产品入库";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section css{
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                $("#GoodsBatchNo").val("R" + controller.FormatDate("YYMMDDHHmmss"));
                controller.LayDate({ elem: "#ProductTime" });
                $("#CompanyId").val(CompanyInfo.Id);
                options.GetGoodsList();
                options.BindTarget();
            },
            //获取产品下拉
            GetGoodsList: function () {
                //产品下拉
                controller.ajax({
                    url: "EnterpriseWeb/GetGoodsList",
                    data: {},
                    type: "post",
                    async: false,
                    success: function (result) {
                        var html = '<option value="0">===请选择===</option>';
                        $.each(result.data, function (i, obj) {
                            html += '<option value="' + obj.Id + '">' + obj.ProductName + '</option>';
                        });
                        $("#GoodsId").html(html);
                    }
                });
                //产品批次下拉
                controller.ajax({
                    url: "EnterpriseWeb/GetProBatchList",
                    data: {},
                    type: "post",
                    async: false,
                    success: function (result) {
                        var html = '<option value="0">===请选择===</option>';
                        $.each(result.data, function (i, obj) {
                            html += '<option value="' + obj.Id + '">' + obj.SeriesName + '</option>';
                        });
                        $("#BatchId").html(html);
                    }
                });
                //人员下拉
                controller.ajax({
                    url: "EnterpriseWeb/GetUserList",
                    data: {},
                    type: "post",
                    async: false,
                    success: function (result) {
                        var html = '<option>==请选择==</option>';
                        $.each(result.data, function (i, obj) {
                            html += '<option>' + obj.TrueName + '</option>';
                        });
                        $("#Manager").html(html);
                    }
                });
            },
            //绑定二维码
            BindTarget: function () {
                $("#bind").on('click', function () {
                    var flag = $("#GoodsId").find("option:selected").val();
                    if (flag == 0)
                        controller.Msg("请先选择产品!");
                    else
                        controller.OpenWindow({
                            title: "绑定二维码",
                            type: 2,
                            height: "400px",
                            width: "600px",
                            url: "WebCompanyManage/Goods/BindTarget?Id=" + flag,
                            callBack: function (result) {
                                result.$("#Edit").submit();
                            }
                        });
                });
            },
            //设置文件值
            SetFileValue: function (data, elememt) {
                var files = $(elememt).val();
                if (files != null && files != "" && files != undefined) {
                    files += "," + data;
                    $(elememt).val(files);
                } else {
                    $(elememt).val(data);
                }
            },
            //事件
            InitEvents: function () {
                //文件上传
                controller.Upload({
                    url: "File/UploadImg",
                    element: ".upload-input",
                    maxNum: 3,
                    node: '.image-box',
                    success: function (result) {
                        controller.Alter(result.msg);
                        options.SetFileValue(result.data, "#CheckResult");
                    }
                });
                //验证
                controller.ValidateConfirm("#Edit");
            },
            //行为
            action: {}
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
<div class="ibox float-e-margins">
    <div class="ibox-content">
        <form class="orm-horizontal" method="post" action="EnterpriseWeb/EditStock" id="Edit">
            <input type="hidden" class="form-control" name="CheckResult" id="CheckResult" />
            <input type="hidden" class="form-control" name="CompanyId" id="CompanyId" />
            <table class="table table-hover table-bordered">
                <tr>
                    <th><label class="control-label">批次号</label></th>
                    <td class="has-warning">
                        <input type="text" class="form-control" name="GoodsBatchNo" id="GoodsBatchNo" readonly />
                    </td>
                    <th><label class="control-label">产品名称</label></th>
                    <td class="has-warning">
                        <select type="select" name="GoodsId" id="GoodsId" class="form-control"></select>
                    </td>
                </tr>
                <tr>
                    <th><label class="control-label">产品系列</label></th>
                    <td class="has-warning">
                        <select type="select" name="BatchId" id="BatchId" class="form-control"></select>
                    </td>
                    <th><label class="control-label">生产时间</label></th>
                    <td class="has-warning">
                        <input type="text" class="form-control" name="ProductTime" id="ProductTime" />
                    </td>
                </tr>
                <tr>
                    <th><label class="control-label">入库数量</label></th>
                    <td class="has-warning">
                        <input type="text" class="form-control" name="InStockNum" />
                    </td>
                    <th><label class="control-label">质检单位</label></th>
                    <td class="has-warning">
                        <input type="text" class="form-control" name="CheckUnit" />
                    </td>
                </tr>
                <tr>
                    <th><label class="control-label">质检人员</label></th>
                    <td class="has-warning">
                        <input type="text" class="form-control" name="CheckUser" />
                    </td>
                    <th><label class="control-label">负责人</label></th>
                    <td class="has-warning">
                        <select type="select" class="form-control" name="Manager" id="Manager"></select>
                    </td>
                </tr>
                <tr>
                    <th><label class="control-label">入库类型</label></th>
                    <td class="has-warning">
                        <select class="form-control" name="StockType" type="select">
                            <option value="产品入库">产品入库</option>
                            <option value="其他入库">其他入库</option>
                        </select>
                    </td>
                    <th><label class="control-label">绑定二维码</label></th>
                    <td class="has-warning">
                        <button id="bind" class="btn btn-info form-control" type="button">绑定二维码标签</button>
                    </td>
                </tr>
                <tr>
                    <th><label class="control-label">质检报告</label></th>
                    <td class="has-warning" colspan="3">
                        <div class="image-box clear">
                            <section class="upload-section">
                                <div class="upload-btn"></div>
                                <input type="file" name="Files" class="upload-input" value="" accept="image/*" multiple="multiple" />
                            </section>
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>