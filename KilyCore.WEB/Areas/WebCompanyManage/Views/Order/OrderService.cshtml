
@{
    ViewData["Title"] = "订单评分";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                 controller.LayDate({ elem: "input[name='ScoreTime']" });
                //设置表单
                this.$table = controller.Table("#tableList", { url: "System/GetOrderScorePage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Edit",param: { ScoreCompany: CompanyInfo.CompanyName}  });
            },
            //事件
            InitEvents: function () {
            }
      
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{
}
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>订单评分</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="Edit">
                        <div class="col-sm-9 m-b-xs">
                            <div class="input-group">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <input type="text" placeholder="评分时间" class="input-sm form-control" name="ScoreTime">
                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-search"></i>搜索</button>
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive m-t-sm">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="OrderNo" data-halign="center" data-align="center" data-valign="middle">订单编号</th>
                                <th data-field="Score" data-halign="center" data-align="center" data-valign="middle">分数</th>
                                <th data-field="ScoreTime" data-halign="center" data-align="center" data-valign="middle">评分时间</th>
                                <th data-field="ScoreCompany" data-halign="center" data-align="center" data-valign="middle">评分企业</th>
                                <th data-field="OrderAccepter" data-halign="center" data-align="center" data-valign="middle">接单人</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>