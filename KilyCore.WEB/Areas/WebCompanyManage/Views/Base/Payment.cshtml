
@{
    ViewData["Title"] = "合同缴费";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section css{
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                var TypePath = controller.GetParam("TypePath")
                $("#CompanyId").val(controller.GetParam("Id"));
                $("#TypePath").val(TypePath);
                $("#CompanyName").val(controller.GetParam("CompanyName"));
                $("#A2").css({ display: "none" });
                $("#A3").css({ display: "none" });
                //获取版本
                controller.ajax({
                    url: "Function/GetAreaVersion",
                    data: { Id: TypePath, Parameter: CompanyInfo.Version },
                    async: false,
                    type: "post",
                    success: function (result) {
                        var html = '<option>===请选择===</option>'
                        $.each(result.data, function (i, obj) {
                            html += '<option value="' + obj.DicValue + '" data-value="' + obj.DicDescript + '">' + obj.DicName + '</option>';
                        });
                        $("#VersionType").html(html);
                    }
                });
                //获取授权企业
                controller.ajax({
                    url: "System/GetAuthorAdmin",
                    data: { Parameter: TypePath },
                    async: false,
                    type: "post",
                    success: function (result) {
                        var html = '<option>===请选择===</option>'
                        $.each(result.data, function (i, obj) {
                            html += '<option value="' + obj.Id + '" data-img="' + obj.Chapter + '">' + obj.TrueName + '</option>';
                        });
                        $("#AdminId").html(html);
                    }
                });
            },
            //事件
            InitEvents: function () {
                //合同模式
                $("input:radio[name='ContractType']").on('click', function () {
                    if ($(this).val() == 1) {
                        $("#A1").css({ display: "block", display: "table-row" });
                        $("#A2").css({ display: "none" });
                        $("#A3").css({ display: "none" });
                    } else {
                        $("#A1").css({ display: "none" });
                        $("#A3").css({ display: "none" });
                        $("#A4").css({ display: "none" });
                        $("#A2").css({ display: "block", display: "table-row" });
                    }
                });
                //支付方式
                $("input:radio[name='PayType']").on('click', function () {
                    if ($(this).val() == 30) {
                        $("#A2").css({ display: "none" });
                        $("#A4").css({ display: "none" });
                        $("#A3").css({ display: "block", display: "table-row" });
                    }
                    else {
                        $("#A4").css({ display: "block", display:"table-footer-group" });
                        $("#A2").css({ display: "none" });
                        $("#A3").css({ display: "none" });
                    }
                });
                //文件上传-票据
                controller.Upload({
                    url: "File/UploadImg",
                    element: ".upload-input",
                    maxNum: 1,
                    success: function (result) {
                        controller.Alter(result.msg);
                        $("#PayTicket").val(result.data);
                    }
                });
                //验证
                controller.ValidateConfirm("#Edit");
            },
            //行为
            action: {}
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
<div class="ibox float-e-margins">
    <div class="ibox-content">
        <form class="orm-horizontal" method="post" action="EnterpriseWeb/SaveContract" id="Edit">
            <input type="hidden" name="PayTicket" id="PayTicket" />
            <input type="hidden" name="CompanyId" id="CompanyId" />
            <input type="hidden" name="TypePath" id="TypePath" />
            <input type="hidden" name="CompanyName" id="CompanyName" />
            <table class="table table-hover table-bordered">
                <tr>
                    <th><label class="control-label">合同模式</label></th>
                    <td class="has-warning">
                        <label class="radio-inline">
                            <input type="radio" name="ContractType" value="1" style="margin-top:3px" checked />
                            <text title="线上合同">线上合同</text>
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="ContractType" value="2" style="margin-top:3px" />
                            <text title="线下合同">线下合同</text>
                        </label>
                    </td>
                    <th><label class="control-label">版本选择</label></th>
                    <td class="has-warning">
                        <select type="select" name="VersionType" class="form-control" id="VersionType"></select>
                    </td>
                </tr>
                <tr>
                    <th><label class="control-label">入住年限/年</label></th>
                    <td class="has-warning" colspan="3">
                        <input type="text" name="ContractYear" class="form-control" placeholder="请填入纯数字不要带其他任何汉子特殊字符" />
                    </td>
                </tr>
                <tr id="A1">
                    <th><label class="control-label">缴费方式</label></th>
                    <td class="has-warning" colspan="3">
                        <label class="radio-inline">
                            <input type="radio" name="PayType" value="10" style="margin-top:3px" checked />
                            <text title="支付宝">支付宝</text>
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="PayType" value="20" style="margin-top:3px" />
                            <text title="微信">微信</text>
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="PayType" value="30" style="margin-top:3px" />
                            <text title="银行转账">银行转账</text>
                        </label>
                    </td>
                </tr>
                <tr id="A2">
                    <th><label class="control-label">授权企业</label></th>
                    <td class="has-warning" colspan="3">
                        <select type="select" name="AdminId" class="form-control" id="AdminId"></select>
                    </td>
                </tr>
                <tr id="A3">
                    <th><label class="control-label">缴费票据</label></th>
                    <td class="has-warning" colspan="3">
                        <div class="image-box clear">
                            <section class="upload-section">
                                <div class="upload-btn"></div>
                                <input type="file" name="Files" class="upload-input" value="" accept="image/*" multiple="multiple" />
                            </section>
                        </div>
                    </td>
                </tr>
                <tfoot id="A4">
                    <tr>
                        <th colspan="4">
                            <a href="#" class="btn btn-block btn-sm">支付</a>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </form>
    </div>
</div>