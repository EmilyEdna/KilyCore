
@{
    ViewData["Title"] = "发货管理";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                //设置表单
                this.$table = controller.Table("#tableList", { url: "EnterpriseWeb/GetLogisticsPage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Edit", param: { SendType: true } });
            },
            //事件
            InitEvents: function () {
                $("#add").on('click', function () {
                    controller.OpenWindow({
                        title: "新增发货",
                        type: 2,
                        height: "500px",
                        width: "900px",
                        url: "WebCompanyManage/Logistics/SendGoodEdit",
                        callBack: function (result) {
                            result.$("#Edit").submit();
                        }
                    })
                });
            },
            //行为
            action: {
                TableFormatter: function (val, row, index) {
                    var action = [];
                    action.push('<button class="btn btn-sm btn-primary del"><i class="fa fa-trash-o"></i>删除</button>');
                    return action.join("&nbsp;")
                },
                TableEvents: {
                    "click .del": function (event, val, row, index) {
                        controller.Confirm("确认删除？", function (bool) {
                            if (bool) {
                                controller.ajax({
                                    url: "EnterpriseWeb/RemoveLogistics",
                                    data: { Id: row.Id },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    },
                }//表单事件结束
            }//行为结束
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{

}

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>发货管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form id="Edit">
                        <div class="col-sm-8 m-b-xs">
                            <div class="input-group">
                                <button type="button" class="btn btn-sm btn-white" id="add"><i class="fa fa-plus"></i>新增</button>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input type="text" placeholder="产品名称" class="input-sm form-control" name="GoodsName">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-search"></i>搜索</button>
                                    <button type="button" id="btn-refresh" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i>刷新</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="PackageNo" data-halign="center" data-align="center" data-valign="middle">打包批次</th>
                                <th data-field="WayBill" data-halign="center" data-align="center" data-valign="middle">运单号</th>
                                <th data-field="GoodsName" data-halign="center" data-align="center" data-valign="middle">产品名称</th>
                                <th data-field="LinkPhone" data-halign="center" data-align="center" data-valign="middle">发货人电话</th>
                                <th data-field="GainUser" data-halign="center" data-align="center" data-valign="middle">收货人</th>
                                <th data-field="Address" data-halign="center" data-align="center" data-valign="middle">收货地址</th>
                                <th data-field="SendGoodsNum" data-halign="center" data-align="center" data-valign="middle">发货数量</th>
                                <th data-field="SendTime" data-halign="center" data-align="center" data-valign="middle">发货时间</th>
                                <th data-field="FlagName" data-halign="center" data-align="center" data-valign="middle">状态</th>
                                <th data-field="TransportWay" data-halign="center" data-align="center" data-valign="middle">运输方式</th>
                                <th data-field="Traffic" data-halign="center" data-align="center" data-valign="middle">交通工具</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>