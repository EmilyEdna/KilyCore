
@{
    ViewData["Title"] = "查看二维码使用";
    Layout = "~/Views/Shared/BaseView.cshtml";
}
@section script{
    <script>
        //配置
        var options = {
            Init: function () {
                this.InitDom();
                this.InitEvents();
            },
            //元素
            InitDom: function () {
                //恢复高度
                $(window).resize(function (e) {
                    window.setTimeout(function () {
                        options.$table.bootstrapTable("resetView", { height: $(window).height() - 150 });
                    }, 200);
                    e.stopPropagation();
                });
                var Id = controller.GetParam("Id");
                var StockNo = controller.GetParam("StockNo");
                var obj = { Id: Id, StockNo: StockNo };
                //设置表单
                this.$table = controller.Table("#tableList", { url: "EnterpriseWeb/GetTagAttachPage", height: $(window).height() - 150, refreshBtn: "#btn-refresh", formElement: "#Edit", param: obj });
            },
            //事件
            InitEvents: function () {

            },
            action: {
                TableFormatter: function (val, row, index) {
                    var action = [];
                    if (row.StockStutas == null)
                        action.push('<button class="btn btn-sm btn-primary del"><i class="fa fa-trash-o"></i>删除</button>');
                    if (row.StockStutas != null)
                        action.push('<button class="btn btn-sm btn-primary print"><i class="fa eye"></i>打印</button>')
                    return action.join("&nbsp;")
                },
                TableEvents: {
                    "click .print": function (event, val, row, index) {
                        controller.OpenWindow({
                            title: "打印二维码",
                            type: 2,
                            height: "90%",
                            width: "80%",
                            url: encodeURI("StaticHtml/PrintCode.html?S=" + row.StarSerialNo + "&T=" + row.UseNum + "&N=" + row.StockNo + "&K=" + row.StockStutas.Id + "&H=" + CompanyInfo.CodeStar),
                            callBack: function (result) {
                                result.$("#Edit").submit();
                            }
                        })
                    },
                    "click .del": function (event, val, row, index) {
                        controller.Confirm("确认删除？", function (bool) {
                            if (bool) {
                                controller.ajax({
                                    url: "EnterpriseWeb/DeleteBindTagInfo",
                                    data: { Id: row.Id },
                                    type: 'post',
                                    success: function (result) {
                                        options.$table.refresh();
                                    }
                                });
                            }
                        });
                    },
                }
            }
        };
        //初始化
        $(document).ready(function () {
            options.Init();
        });
    </script>
}
@section css{

}

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>使用情况</h5>
            </div>
            <div class="ibox-content">
                <div class="row">

                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table">
                        <thead>
                            <tr>
                                <th data-field="StockNo" data-halign="center" data-align="center" data-valign="middle">库存编号</th>
                                <th data-field="StarSerialNos" data-halign="center" data-align="center" data-valign="middle">开始号段</th>
                                <th data-field="EndSerialNos" data-halign="center" data-align="center" data-valign="middle">结束号段</th>
                                <th data-field="UseNum" data-halign="center" data-align="center" data-valign="middle">使用数量</th>
                                <th data-formatter="options.action.TableFormatter" data-events="options.action.TableEvents" data-halign="center" data-align="center" data-valign="middle">操作</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>